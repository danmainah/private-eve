<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Title</th>
      <th>Date and Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% obj.each do |event| %>
      <tr>
        <td><%= event.creator.email %></td>
        <td><%= event.title %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>